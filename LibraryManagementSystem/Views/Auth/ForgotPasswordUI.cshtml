        <br />
        <form asp-controller="Auth" asp-action="ForgotPasswordUI" method="post">
            <div class="mb-4 area">
                <label class="MyLabel3">Email</label>
                <input asp-for="Email" style="width:340px;margin-left:20px" type="email"  class="form-control" placeholder="Email Adresinizi giriniz" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <span class="text-danger">@ViewData["Message"] </span>
            </div>
            <div>
                <button style="margin-left:100px" asp-controller="Auth" asp-action="SignInUI" formmethod="get" class="btn btn-success">Geri Dön</button>
                <button class="btn btn-danger" type="submit">Şifreni Güncelle</button>
            </div>
        </form>
    </div>
